class Worker:
    def __init__(self, name, surname, position, wage, bonus):
        self.name = name
        self.surname = surname
        self.position = position
        self._income = {"Zarplata": wage, "premija": bonus}


class Position(Worker):
    def get_full_name(self):
        return f"{self.name} {self.surname}, {self.position}"

    def get_total_income(self):
        return f"{sum(self._income.values())}"


lab_assistant = Position("Aleksej", "B", "lab assistant", 500, 60)
analytical_chemist = Position("Georgij", "B", "analytical chemist", 600, 90)
senior_chemist = Position("Ruslan", "S", "senior chemist", 1300, 200)
print(lab_assistant.get_full_name(), lab_assistant.get_total_income())
print(analytical_chemist.get_full_name(), analytical_chemist.get_total_income())
print(senior_chemist.get_full_name(), senior_chemist.get_total_income())
